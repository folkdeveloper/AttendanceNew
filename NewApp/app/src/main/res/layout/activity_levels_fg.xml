<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/list_fgs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"></ListView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="195dp"
        android:layout_height="712dp"
        android:layout_alignParentTop="true"
        android:textSize="20dp" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"></androidx.appcompat.widget.Toolbar>

    <ImageView
        android:layout_width="69dp"
        android:layout_height="53dp"
        android:scaleX="1"
        android:scaleY="1"
        android:src="@drawable/folklogo"
        android:onClick="select1"></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="3dp"
        android:text="Click on FG"
        android:textSize="30dp"
        android:textStyle="bold"
        />

</RelativeLayout>